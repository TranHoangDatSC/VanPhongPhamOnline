@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2>Chào mừng đến với cửa hàng văn phòng phẩm trực tuyến!</h2>
    <p>Chuyên cung cấp đồ dùng học tập chất lượng cao!</p>
    <br>
</div>
<!-- Carousel Start -->
<div class="container-fluid mb-3">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#header-carousel" data-slide-to="1"></li>
                    <li data-target="#header-carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item position-relative active" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="~/Hinh/carousel-1.jpg" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Đồ Dùng Học Tập</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Giá rẻ, phục vụ học tập mọi lúc mọi nơi.</p>
                                <a asp-controller="HangHoa" asp-action="Index" class="btn btn-primary mt-3">Xem Sản Phẩm</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="~/Hinh/carousel-2.jpg" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Văn Phòng Phẩm</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Đa dạng sản phẩm từ bút, thước, vở, giấy in...</p>
                                <a asp-controller="HangHoa" asp-action="Index" class="btn btn-primary mt-3">Khám Phá</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item position-relative" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="~/Hinh/carousel-3.jpg" style="object-fit: cover;">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Chất Lượng Cao.</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn"></p>
                                <a asp-controller="HangHoa" asp-action="Index" class="btn btn-primary mt-3">Xem Ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="~/Hinh/offer-1.jpg" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase"></h6>
                    <h3 class="text-white mb-3">Combo Đặc Biệt</h3>
                    <a asp-controller="HangHoa" asp-action="Index" class="btn btn-primary mt-3">Xem Ngay</a>
                </div>
            </div>
            <div class="product-offer mb-30" style="height: 200px;">
                <img class="img-fluid" src="~/Hinh/offer-2.jpg" alt="">
                <div class="offer-text">
                    <h6 class="text-white text-uppercase"></h6>
                    <h3 class="text-white mb-3">Tiết Kiệm Hơn</h3>
                    <a asp-controller="HangHoa" asp-action="Index" class="btn btn-primary mt-3">Xem Ngay</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->
<!-- Featured Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="bg-light mb-4 p-4 rounded shadow-sm text-center feature-box">
                <i class="fa fa-check text-primary fa-3x mb-3"></i>
                <h5 class="font-weight-bold mb-0">Sản phẩm<br>chất lượng cao</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="bg-light mb-4 p-4 rounded shadow-sm text-center feature-box">
                <i class="fa fa-shipping-fast text-primary fa-3x mb-3"></i>
                <h5 class="font-weight-bold mb-0">Giao hàng trong<br>Sài Gòn chỉ 10K</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="bg-light mb-4 p-4 rounded shadow-sm text-center feature-box">
                <i class="fas fa-exchange-alt text-primary fa-3x mb-3"></i>
                <h5 class="font-weight-bold mb-0">Trễ nhất<br>3 ngày nhận hàng</h5>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
            <div class="bg-light mb-4 p-4 rounded shadow-sm text-center feature-box">
                <i class="fa fa-phone-volume text-primary fa-3x mb-3"></i>
                <h5 class="font-weight-bold mb-0">Hỗ trợ<br>khách hàng 24/7</h5>
            </div>
        </div>
    </div>
</div>
<!-- Featured End -->