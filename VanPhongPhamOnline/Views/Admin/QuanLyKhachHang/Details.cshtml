@model VanPhongPhamOnline.Data.KhachHang

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Chi tiết khách hàng</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(120deg, #e3f2fd, #bbdefb);
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
        }

        .container-box {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: 0 auto;
        }

        h1 {
            color: #1976d2;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
        }

        .detail-row {
            display: flex;
            margin-bottom: 15px;
            padding: 12px 0;
            border-bottom: 1px solid #e0e0e0;
        }

        .detail-label {
            font-weight: 600;
            color: #333;
            width: 200px;
            flex-shrink: 0;
        }

        .detail-value {
            color: #666;
            flex: 1;
        }

        .back-link, .edit-link {
            color: #1976d2;
            text-decoration: none;
            font-weight: bold;
            margin-right: 20px;
            display: inline-block;
            padding: 10px 20px;
            border: 2px solid #1976d2;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            .back-link:hover, .edit-link:hover {
                background-color: #1976d2;
                color: white;
                text-decoration: none;
            }

        .actions {
            text-align: center;
            margin-top: 30px;
        }

        .gender-badge {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 14px;
            font-weight: bold;
        }

        .gender-male {
            background-color: #e3f2fd;
            color: #1976d2;
        }

        .gender-female {
            background-color: #fce4ec;
            color: #c2185b;
        }

        .customer-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #1976d2;
            margin-bottom: 20px;
        }

        .image-section {
            text-align: center;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="container-box">
            <h1>Chi tiết khách hàng</h1>

            <!-- Include Toast Notification -->
            @await Html.PartialAsync("_ToastNotification")

            <div class="image-section">
                @{
                    var imageSrc = !string.IsNullOrEmpty(Model.HinhKh) ?
                    "~/Hinh/KhachHang/" + Model.HinhKh :
                    "~/Hinh/default-customer.jpg";
                }
                <img src="@Url.Content(imageSrc)" alt="Ảnh khách hàng" class="customer-image" />
            </div>

            <div class="detail-row">
                <div class="detail-label">Mã khách hàng:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.MaKh)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Họ tên:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.HoTenKh)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Email:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.EmailKh)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Điện thoại:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.DienThoaiKh)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Giới tính:</div>
                <div class="detail-value">
                    <span class="gender-badge @(Model.GioiTinhKh ? "gender-male" : "gender-female")">
                        @(Model.GioiTinhKh ? "Nam" : "Nữ")
                    </span>
                </div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Ngày sinh:</div>
                <div class="detail-value">@Model.NgaySinhKh.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Địa chỉ:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.DiaChiKh)</div>
            </div>

            <div class="actions">
                <a href="@Url.Action("Index", "QuanLyKhachHang")" class="back-link">← Quay lại danh sách</a>
                <a href="@Url.Action("Edit", "QuanLyKhachHang", new { id = Model.MaKh })" class="edit-link">✏️ Chỉnh sửa</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>