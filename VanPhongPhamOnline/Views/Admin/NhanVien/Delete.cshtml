@model VanPhongPhamOnline.Data.NhanVien

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Xóa nhân viên</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(120deg, #fff3e0, #ffe0b2);
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
        }

        .container-box {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 0 auto;
        }

        h1 {
            color: #e65100;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
        }

        .warning-message {
            background: linear-gradient(45deg, #fff3e0, #ffe0b2);
            border: 2px solid #e65100;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 30px;
            text-align: center;
            color: #e65100;
            font-weight: bold;
        }

        .detail-row {
            display: flex;
            margin-bottom: 15px;
            padding: 12px 0;
            border-bottom: 1px solid #e0e0e0;
        }

        .detail-label {
            font-weight: 600;
            color: #333;
            width: 150px;
            flex-shrink: 0;
        }

        .detail-value {
            color: #666;
            flex: 1;
        }

        .btn-delete {
            background: linear-gradient(45deg, #ef5350, #d32f2f);
            border: none;
            color: white;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: bold;
            margin-right: 15px;
            transition: all 0.3s ease;
        }

            .btn-delete:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(211, 47, 47, 0.4);
                color: white;
            }

        .btn-cancel {
            background: linear-gradient(45deg, #78909c, #546e7a);
            border: none;
            color: white;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: bold;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .btn-cancel:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(84, 110, 122, 0.4);
                color: white;
                text-decoration: none;
            }

        .actions {
            text-align: center;
            margin-top: 30px;
        }

        .gender-badge {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 14px;
            font-weight: bold;
        }

        .gender-male {
            background-color: #e3f2fd;
            color: #1976d2;
        }

        .gender-female {
            background-color: #fce4ec;
            color: #c2185b;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="container-box">
            <h1>⚠️ Xác nhận xóa nhân viên</h1>

            <!-- Nếu có Toast Notification dùng chung -->
            @await Html.PartialAsync("_ToastNotification")

            <div class="warning-message">
                Bạn có chắc chắn muốn xóa nhân viên này không?<br />
                <strong>Hành động này không thể hoàn tác!</strong>
            </div>

            <div class="detail-row">
                <div class="detail-label">Mã nhân viên:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.MaNv)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Họ tên:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.HoTenNv)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Email:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.EmailNv)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Mật khẩu:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.MatKhauNv)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Địa chỉ:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.DiaChiNv)</div>
            </div>

            <div class="actions">
                <form asp-action="Delete" method="post" style="display: inline;">
                    <input type="hidden" asp-for="MaNv" />
                    <button type="submit" class="btn-delete" onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này?')">
                        🗑️ Xóa nhân viên
                    </button>
                </form>
                <a href="@Url.Action("Index", "NhanVien")" class="btn-cancel">❌ Hủy bỏ</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
