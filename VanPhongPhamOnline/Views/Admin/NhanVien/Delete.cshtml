@model VanPhongPhamOnline.Data.NhanVien

@{
    ViewData["Title"] = "Xóa Nhân Viên";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Xóa Nhân Viên</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(120deg, #fff3e0, #ffe0b2);
            font-family: 'Segoe UI', sans-serif;
        }

        .delete-box {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #d32f2f;
            font-weight: bold;
        }

        .subtitle {
            color: #f57c00;
            font-weight: 600;
        }

        dt {
            font-weight: 600;
            color: #555;
        }

        .btn-danger {
            background-color: #d32f2f;
            border: none;
        }

            .btn-danger:hover {
                background-color: #b71c1c;
            }

        .btn-secondary {
            border-radius: 30px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 delete-box">
                <h2 class="text-center mb-3">XÓA NHÂN VIÊN</h2>
                <p class="text-center subtitle mb-4">Bạn có chắc chắn muốn xóa nhân viên sau?</p>

                <dl class="row">
                    <dt class="col-sm-4">Họ và Tên:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.HoTenNv)</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailNv)</dd>

                    <dt class="col-sm-4">Mật khẩu:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MatKhauNv)</dd>
                </dl>

                <form asp-action="Delete" method="post" class="text-center mt-4">
                    <input type="hidden" asp-for="MaNv" />
                    <button type="submit" class="btn btn-danger px-4 me-3">Xác nhận xóa</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Quay lại</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
