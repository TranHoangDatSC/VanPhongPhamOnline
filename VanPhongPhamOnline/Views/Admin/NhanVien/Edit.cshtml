@model VanPhongPhamOnline.Data.HoaDon

@{
    Layout = null;
    ViewData["Title"] = "Chỉnh sửa đơn hàng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #fff8e1, #ffe0b2);
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
        }

        .container-box {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: 0 auto;
        }

        h1 {
            color: #ff9800;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
        }

        .form-group label {
            font-weight: 600;
            color: #333;
        }

        .form-control {
            border: 2px solid #ffc107;
            border-radius: 10px;
            padding: 12px 15px;
            transition: 0.3s ease;
        }

            .form-control:focus {
                border-color: #fb8c00;
                box-shadow: 0 0 10px rgba(255, 152, 0, 0.3);
            }

        .btn-submit {
            background: linear-gradient(45deg, #ffa726, #fb8c00);
            color: white;
            border: none;
            border-radius: 25px;
            font-weight: bold;
            width: 100%;
            padding: 12px;
            transition: 0.3s;
        }

            .btn-submit:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 152, 0, 0.3);
            }

        .text-danger {
            font-size: 14px;
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="container-box">
            <a href="@Url.Action("Index", "HoaDon")" class="mb-3 d-block text-decoration-none text-warning font-weight-bold">← Quay lại danh sách</a>
            <h1>Cập Nhật Đơn Hàng</h1>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="MaHd" />

                <div class="form-group">
                    <label asp-for="MaKh">Mã khách hàng</label>
                    <input asp-for="MaKh" class="form-control" />
                    <span asp-validation-for="MaKh" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NgayDat">Ngày đặt</label>
                    <input asp-for="NgayDat" type="datetime-local" class="form-control" />
                    <span asp-validation-for="NgayDat" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NgayCan">Ngày cần</label>
                    <input asp-for="NgayCan" type="datetime-local" class="form-control" />
                    <span asp-validation-for="NgayCan" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NgayGiao">Ngày giao</label>
                    <input asp-for="NgayGiao" type="datetime-local" class="form-control" />
                    <span asp-validation-for="NgayGiao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="HoTenNguoiNhan">Họ tên người nhận</label>
                    <input asp-for="HoTenNguoiNhan" class="form-control" />
                    <span asp-validation-for="HoTenNguoiNhan" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DiaChi">Địa chỉ</label>
                    <textarea asp-for="DiaChi" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CachThanhToan">Cách thanh toán</label>
                    <input asp-for="CachThanhToan" class="form-control" />
                    <span asp-validation-for="CachThanhToan" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CachVanChuyen">Cách vận chuyển</label>
                    <input asp-for="CachVanChuyen" class="form-control" />
                    <span asp-validation-for="CachVanChuyen" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhiVanChuyen">Phí vận chuyển</label>
                    <input asp-for="PhiVanChuyen" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="PhiVanChuyen" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MaTrangThai">Trạng thái đơn hàng</label>
                    <select asp-for="MaTrangThai" class="form-control" asp-items="ViewBag.MaTrangThai"></select>
                    <span asp-validation-for="MaTrangThai" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MaNv">Mã nhân viên xử lý</label>
                    <input asp-for="MaNv" class="form-control" />
                    <span asp-validation-for="MaNv" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GhiChu">Ghi chú</label>
                    <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn-submit">Cập nhật đơn hàng</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
