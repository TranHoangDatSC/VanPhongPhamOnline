@model VanPhongPhamOnline.Data.NhanVien

@{
    Layout = null;
    ViewData["Title"] = "Chỉnh sửa nhân viên";
    //     var imageSrc = !string.IsNullOrEmpty(Model.HinhNv)
    //         ? "~/Hinh/NhanVien/" + Model.HinhNv
    //         : "~/Hinh/default-avatar.jpg";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #fff8e1, #ffe0b2);
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
        }

        .container-box {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: 0 auto;
        }

        h1 {
            color: #ff9800;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
        }

        .form-group label {
            font-weight: 600;
            color: #333;
        }

        .form-control {
            border: 2px solid #ffc107;
            border-radius: 10px;
            padding: 12px 15px;
            transition: 0.3s ease;
        }

            .form-control:focus {
                border-color: #fb8c00;
                box-shadow: 0 0 10px rgba(255, 152, 0, 0.3);
            }

        .btn-submit {
            background: linear-gradient(45deg, #ffa726, #fb8c00);
            color: white;
            border: none;
            border-radius: 25px;
            font-weight: bold;
            width: 100%;
            padding: 12px;
            transition: 0.3s;
        }

            .btn-submit:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 152, 0, 0.3);
            }

        .image-upload-section {
            text-align: center;
            margin-bottom: 20px;
        }

        .image-preview {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #ffa726;
            margin-bottom: 15px;
        }

        .upload-btn {
            background: linear-gradient(45deg, #ff9800, #f57c00);
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            cursor: pointer;
            font-weight: bold;
            display: inline-block;
        }

            .upload-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(245, 124, 0, 0.4);
            }

        #imageUpload {
            display: none;
        }

        .password-input-container {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #666;
            cursor: pointer;
            padding: 0;
            font-size: 16px;
        }

            .password-toggle:hover {
                color: #ff9800;
            }

        .text-danger {
            font-size: 14px;
        }

        .radio-group {
            display: flex;
            gap: 20px;
        }

        .radio-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="container-box">
            <a href="@Url.Action("IndexNhanVien", "Admin")" class="back-link mb-3 d-block text-decoration-none text-warning font-weight-bold">← Quay lại danh sách</a>
            <h1>Cập Nhật Nhân Viên</h1>

            <form asp-action="Profile" method="post" enctype="multipart/form-data">
                @* <div class="image-upload-section">
                     <img id="imagePreview" src="@Url.Content(imageSrc)" alt="Avatar" class="image-preview" />
                     <br>
                     <label for="imageUpload" class="upload-btn">📷 Thay đổi ảnh đại diện</label>
                     <input type="file" id="imageUpload" name="HinhNv" accept="image/*" onchange="previewImage(this)" />
                     <br><small class="text-muted">Bỏ trống nếu không muốn đổi ảnh</small>
                </div> *@
                <input type="hidden" asp-for="MaNv" />
                <input type="hidden" asp-for="EmailNv" />
                <input type="hidden" asp-for="RandomKeyNv" />

                <div class="form-group">
                    <label asp-for="HoTenNv">Họ tên</label>
                    <input asp-for="HoTenNv" class="form-control" />
                    <span asp-validation-for="HoTenNv" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmailNv">Email</label>
                    <input asp-for="EmailNv" type="email" class="form-control" />
                    <span asp-validation-for="EmailNv" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MatKhauNv">Mật khẩu mới (để trống nếu không đổi)</label>
                    <div class="password-input-container">
                        <input asp-for="MatKhauNv" type="password" class="form-control" id="passwordField" />
                        <button type="button" class="password-toggle" onclick="togglePassword('passwordField', this)">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="MatKhauNv" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NgaySinhNv">Ngày sinh</label>
                    <input asp-for="NgaySinhNv" type="date" class="form-control" />
                    <span asp-validation-for="NgaySinhNv" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Giới tính</label>
                    <div class="radio-group">
                        <div class="radio-item">
                            <input asp-for="GioiTinhNv" type="radio" value="true" id="nam" />
                            <label for="nam">Nam</label>
                        </div>
                        <div class="radio-item">
                            <input asp-for="GioiTinhNv" type="radio" value="false" id="nu" />
                            <label for="nu">Nữ</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="DiaChiNv">Địa chỉ</label>
                    <textarea asp-for="DiaChiNv" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="DiaChiNv" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DienThoaiNv">Điện Thoại</label>
                    <input asp-for="DienThoaiNv" class="form-control" />
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn-submit">Cập nhật nhân viên</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function togglePassword(fieldId, button) {
            const field = document.getElementById(fieldId);
            const icon = button.querySelector('i');
            if (field.type === 'password') {
                field.type = 'text';
                icon.className = 'fas fa-eye-slash';
            } else {
                field.type = 'password';
                icon.className = 'fas fa-eye';
            }
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
