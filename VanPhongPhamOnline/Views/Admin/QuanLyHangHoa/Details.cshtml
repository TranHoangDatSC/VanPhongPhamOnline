@model VanPhongPhamOnline.Data.HangHoa

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Chi tiết hàng hóa</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(120deg, #e3f2fd, #bbdefb);
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
        }

        .container-box {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: 0 auto;
        }

        h1 {
            color: #1976d2;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
        }

        .detail-row {
            display: flex;
            margin-bottom: 15px;
            padding: 12px 0;
            border-bottom: 1px solid #e0e0e0;
        }

        .detail-label {
            font-weight: 600;
            color: #333;
            width: 200px;
            flex-shrink: 0;
        }

        .detail-value {
            color: #666;
            flex: 1;
        }

        .back-link, .edit-link {
            color: #1976d2;
            text-decoration: none;
            font-weight: bold;
            margin-right: 20px;
            display: inline-block;
            padding: 10px 20px;
            border: 2px solid #1976d2;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            .back-link:hover, .edit-link:hover {
                background-color: #1976d2;
                color: white;
                text-decoration: none;
            }

        .actions {
            text-align: center;
            margin-top: 30px;
        }

        .product-image {
            width: 100px;
            height: 100px;
            border-radius: 10px;
            object-fit: cover;
            border: 3px solid #1976d2;
            margin-bottom: 20px;
        }

        .image-section {
            text-align: center;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="container-box">
            <h1>Chi tiết hàng hóa</h1>

            @await Html.PartialAsync("_ToastNotification")

            <div class="image-section">
                @{
                    var imageSrc = !string.IsNullOrEmpty(Model.Hinh) ?
                    "~/Hinh/" + Model.Hinh :
                    "~/Hinh/default-product.jpg";
                }
                <img src="@Url.Content(imageSrc)" alt="@Model.TenHh" class="product-image" />
            </div>

            <div class="detail-row">
                <div class="detail-label">Mã hàng hóa:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.MaHh)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Tên hàng hóa:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.TenHh)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Loại hàng hóa:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.MaLoaiNavigation.TenLoai)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Nhà cung cấp:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.MaNccNavigation.TenCongTy)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Đơn giá:</div>
                <div class="detail-value">@Model.DonGia?.ToString("N0") VNĐ</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Giảm giá:</div>
                <div class="detail-value">@Model.GiamGia.ToString("N2")%</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Ngày sản xuất:</div>
                <div class="detail-value">@Model.NgaySx.ToString("dd/MM/yyyy")</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Mô tả đơn vị:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.MoTaDonVi)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Tên alias:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.TenAlias)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Số lần xem:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.SoLanXem)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">Mô tả:</div>
                <div class="detail-value">@Html.DisplayFor(model => model.MoTa)</div>
            </div>

            <div class="actions">
                <a href="@Url.Action("Index", "QuanLyHangHoa")" class="back-link">← Quay lại danh sách</a>
                <a href="@Url.Action("Edit", "QuanLyHangHoa", new { id = Model.MaHh })" class="edit-link">✏️ Chỉnh sửa</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>