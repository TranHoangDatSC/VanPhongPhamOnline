@model VanPhongPhamOnline.ViewModels.DatLaiMatKhauVM
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h2 class="text-center mb-4">Đặt lại mật khẩu</h2>

            <form asp-action="DatLaiMatKhau">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Email" />

                <div class="mb-3">
                    <label asp-for="MatKhauMoi" class="form-label">Mật khẩu mới</label>
                    <input asp-for="MatKhauMoi" type="password" class="form-control" />
                    <span asp-validation-for="MatKhauMoi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NhapLaiMatKhau" class="form-label">Nhập lại mật khẩu</label>
                    <input asp-for="NhapLaiMatKhau" type="password" class="form-control" />
                    <span asp-validation-for="NhapLaiMatKhau" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success">Cập nhật mật khẩu</button>
                </div>
            </form>
        </div>
    </div>
</div>