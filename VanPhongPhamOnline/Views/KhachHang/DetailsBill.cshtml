@model IEnumerable<VanPhongPhamOnline.ViewModels.BillVM>

@{
    ViewData["Title"] = "Lịch sử mua hàng";

    var pageNumber = ViewBag.PageNumber as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
}

<div class="container py-5">
    <h1 class="text-center mb-4">📦 Lịch sử mua hàng</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Bạn chưa có hóa đơn nào.
        </div>
    }
    else
    {
        foreach (var bill in Model)
        {
            <div class="card shadow-lg mb-5 rounded-3 border-0">
                <div class="card-header bg-gradient text-white"
                     style="background: linear-gradient(45deg, #f6a623, #f39c12);">
                    <h5 class="mb-0">Hóa đơn #@bill.MaHd</h5>
                    <small>Ngày đặt: @bill.NgayDat.ToString("dd/MM/yyyy")</small>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>👤 Người nhận:</strong> @bill.HoTenNguoiNhan</p>
                            <p><strong>📍 Địa chỉ:</strong> @bill.DiaChi</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>💳 Thanh toán:</strong> @bill.CachThanhToan</p>
                            <p><strong>🚚 Vận chuyển:</strong> @bill.CachVanChuyen (@bill.PhiVanChuyen.ToString("c"))</p>
                        </div>
                    </div>

                    <p>
                        <strong>📌 Trạng thái:</strong>
                        <span class="badge bg-success">@bill.TenTrangThai</span>
                    </p>
                    <p>
                        <strong>💰 Tổng tiền:</strong>
                        <span class="fw-bold text-danger">@bill.TongTien.ToString("N0")</span>
                    </p>

                    <h5 class="mt-4">Chi tiết sản phẩm</h5>
                    <table class="table table-bordered table-hover align-middle mt-3">
                        <thead class="table-warning text-center">
                            <tr>
                                <th>Mã HH</th>
                                <th>Tên hàng hóa</th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ct in bill.ChiTietHds)
                            {
                                <tr>
                                    <td class="text-center">@ct.MaHh</td>
                                    <td>@ct.TenHh</td>
                                    <td class="text-end">@ct.DonGia.ToString("c")</td>
                                    <td class="text-center">@ct.SoLuong</td>
                                    <td class="text-end fw-bold">@ct.ThanhTien.ToString("c")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Profile" class="btn btn-secondary btn-sm">
                        <i class="fa fa-arrow-left me-1"></i> Quay lại hồ sơ
                    </a>
                </div>
            </div>
        }

        <!-- Phân trang -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (pageNumber > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Details", new { pageNumber = pageNumber - 1 })">« Trước</a>
                    </li>
                }
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == pageNumber ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Details", new { pageNumber = i })">@i</a>
                    </li>
                }
                @if (pageNumber < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Details", new { pageNumber = pageNumber + 1 })">Sau »</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

<style>
    .card {
        border-radius: 16px;
    }

    .card-header {
        border-top-left-radius: 16px !important;
        border-top-right-radius: 16px !important;
    }

    table th, table td {
        vertical-align: middle;
    }

    .table-warning {
        background: linear-gradient(45deg, #f6a623, #f39c12);
        color: white;
    }

    .badge {
        font-size: 0.9rem;
        padding: 8px 14px;
        border-radius: 12px;
    }

        .badge.bg-success {
            background-color: #fff !important;
            color: #28a745 !important; 
        }

    .pagination .page-link {
        border-radius: 8px;
        margin: 0 3px;
        color: #f39c12;
    }

    .pagination .page-item.active .page-link {
        background-color: #f39c12;
        border-color: #f39c12;
        color: #fff;
    }
</style>
