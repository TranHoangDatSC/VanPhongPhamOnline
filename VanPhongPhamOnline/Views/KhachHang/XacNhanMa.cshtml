@model VanPhongPhamOnline.ViewModels.XacNhanMaVM
@{
    ViewData["Title"] = "Xác nhận mã OTP";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h2 class="text-center mb-4">Xác nhận mã OTP</h2>

            <form asp-action="XacNhanMa">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Email" />

                <div class="mb-3">
                    <label asp-for="MaXacNhan" class="form-label">Mã xác nhận</label>
                    <input asp-for="MaXacNhan" class="form-control" />
                    <span asp-validation-for="MaXacNhan" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Tiếp tục</button>
                </div>
            </form>
        </div>
    </div>
</div>